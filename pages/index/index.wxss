/**index.wxss**/
.current_state {
  display: flex;
  margin-left: auto;
  margin-right: auto;
  height: 110rpx;

  text-align: center;
  color: #25ae08;
  background-color: #efeff4;
  font-size: 40rpx;

  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
}

.icon_down {
  height: 40rpx;
  width: 40rpx;
}

.state_list {
  margin-top: 2rpx;
  position: absolute;
  top: 110rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 9;
  font-size: 15px;
  border-bottom: 1rpx solid #ddd;
}

.state_list_show {
  animation: slide 500ms;
}

.state_list_hide {
  display: none !important
}

.state_item {
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
  color: #25ae08;
}

.container {
  background: #faf9fa;
  z-index: 0;
  height: auto;
  width: 100%;
}

.chart {
  height: 600rpx;
  width: 100%;
}

.click_once {
  background-color: rgba(0, 0, 0, 0.1) !important;
  opacity: 0.7 !important;
}

.scroll_view {
  top: 100rpx;
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 8
}

.data_row {
  display: flex;
  margin: 0 auto;
  width: 100%;
  height: 80rpx;
  border-bottom:
    1rpx solid #ddd;
}

.data_coloum {
  box-sizing: border-box;
  width: 50%;
  padding: 5px;
  text-align:
    center;
}

.dialog {
  position: fixed;
  background: #fff;
  width: 90%;
  margin-left: -45%;
  left: 50%;
  border-radius: 5px;
  top: 135rpx;
  z-index: 1000;
  height: 900rpx;
}

.dialog_title {
  text-align: center;
  padding: 30rpx;
  font-size: 36rpx;
  color: #000;
  font-weight:bold
}

.source_row {
  display: flex;
  margin: 0 auto;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:
    1rpx solid #ddd;
}

.source_left {
  width: 50%;
  font-size: 28rpx;
  text-align: left;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.source_right {
  width: 50%;
  font-size: 28rpx;
  text-align: left;
  box-sizing: border-box;
}

.close {
  width: 64rpx;
  height: 84rpx;
  position: absolute;
  top: -76rpx;
  right: 0;
}
